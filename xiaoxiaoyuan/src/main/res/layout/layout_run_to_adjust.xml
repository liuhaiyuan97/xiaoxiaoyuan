<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_question1"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_question_name"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="第一关"
            android:textSize="32dp"
            android:textColor="#C3F7F9"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_question_content"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:background="@mipmap/bg_question2"
        android:text="将字符串“cdexfdcgqxyzjhjklopnmhytfdesxcgyijhvmq”第33个字母打印出来"
        android:textSize="18dp"
        android:textColor="#C3F7F9"
        android:gravity="center"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_question_begin"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@mipmap/pop_btn_begin"/>
        <Button
            android:id="@+id/btn_question_cancle"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/pop_btn_cancle"/>
    </LinearLayout>

</LinearLayout>