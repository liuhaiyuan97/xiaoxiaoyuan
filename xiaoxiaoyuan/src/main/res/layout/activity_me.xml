<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@mipmap/bg_all"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_weight="6"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_register"
        android:orientation="horizontal">
        <LinearLayout
            android:background="#1000F4FC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.9"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_me_left_top"
                android:layout_width="match_parent"
                android:layout_weight="0.9"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_head"
                    android:layout_marginRight="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:textColor="@color/textdefalt"
                    android:hint="未编辑"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:id="@+id/tv_userName"
                    android:gravity="center_vertical" />
            </LinearLayout>
            <!--左边布局上下的分界线-->
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:background="@color/text"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <!--左下方的listview-->
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_height="0dp"/>
                <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="-10dp"
                            android:layout_marginRight="15dp"
                            android:adjustViewBounds="true"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:src="@mipmap/me1"/>
                        <TextView
                            android:textColor="@color/textclick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个人作品"
                            android:textSize="16dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_me_my_friend"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="-10dp"
                            android:layout_marginRight="15dp"
                            android:adjustViewBounds="true"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:src="@mipmap/me2"/>
                        <TextView
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textclick"
                            android:text="我的好友"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_me_friend_request"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="-10dp"
                            android:adjustViewBounds="true"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp"
                            android:src="@mipmap/me3"/>
                        <TextView
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textclick"
                            android:text="好友申请"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="-10dp"
                            android:adjustViewBounds="true"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp"
                            android:src="@mipmap/me4"/>
                        <TextView
                            android:textSize="16dp"
                            android:textColor="@color/textclick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="我的题库"/>
                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="-10dp"
                            android:adjustViewBounds="true"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp"
                            android:src="@mipmap/me5"/>
                        <TextView
                            android:textSize="16dp"
                            android:textColor="@color/textclick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的下载"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="-10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:adjustViewBounds="true"
                            android:layout_marginRight="15dp"
                            android:src="@mipmap/me6"/>
                        <TextView
                            android:textSize="16dp"
                            android:id="@+id/tv_setting"
                            android:textColor="@color/textclick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="注         销"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.5"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--左右两边的分界线-->
        <LinearLayout
            android:background="#1AADAE"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <!--此时进入右边布局-->
        <LinearLayout
            android:id="@+id/ll_me_whole_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <!--右边上方布局，显示此板块具体内容的标题-->
            <TextView
                android:id="@+id/tv_me_right_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textColor="@color/text"
                android:layout_marginTop="5dp"
                android:gravity="center"/>

            <!--右边布局的主要内容-->

            <LinearLayout
                android:paddingRight="15dp"
                android:id="@+id/ll_me_right_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <include layout="@layout/layout_me_center"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <include layout="@layout/menu"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
