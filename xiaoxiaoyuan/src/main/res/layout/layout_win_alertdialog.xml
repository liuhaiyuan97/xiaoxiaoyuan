<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:background="@mipmap/bg_question1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_margin="20dp"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_win1"
                android:layout_gravity="center"
                android:src="@mipmap/btn_lose_logo1"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_win2"
                android:layout_gravity="center"
                android:src="@mipmap/btn_lose_logo2"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_gravity="left"
                android:text="恭喜你！通关啦！"
                android:layout_width="wrap_content"
                android:textSize="26dp"
                android:textColor="#C3F7F9"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="left"
                android:text="智慧源于勤奋，"
                android:layout_width="wrap_content"
                android:textSize="19dp"
                android:textColor="@color/text"
                android:layout_height="wrap_content" />
            <TextView
                android:text="伟大出自平凡。"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:textSize="19dp"
                android:textColor="@color/text"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_next"
            android:layout_marginTop="5dp"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:background="@mipmap/dialog_btn_next"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

</LinearLayout>
