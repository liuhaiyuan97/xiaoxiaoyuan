<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_setting"
        android:layout_gravity="center"
        android:src="@mipmap/open"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="45dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_spin"
                android:src="@mipmap/spin"
                android:layout_width="65dp"
                android:layout_height="45dp" />
            <TextView
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/text"
                android:text="菜单"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="8">
        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_HomePage"
            android:src="@mipmap/homepage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_charts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:src="@mipmap/charts" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_community"
            android:src="@mipmap/community"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"/>
        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_me"
            android:src="@mipmap/me"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"/>


    </LinearLayout>
</LinearLayout>
