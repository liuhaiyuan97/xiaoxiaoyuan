<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:background="@mipmap/bg_question1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_margin="20dp"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_lose1"
                android:layout_gravity="center"
                android:src="@mipmap/btn_win_logo1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_lose2"
                android:layout_gravity="center"
                android:src="@mipmap/btn_win_logo2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:text="结果不正确"
                android:layout_width="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/text"
                android:layout_height="wrap_content" />
            <TextView
                android:text="胸怀临云志，莫负少年时。"
                android:layout_width="wrap_content"
                android:textSize="19dp"
                android:textColor="@color/text"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_jump"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:background="@mipmap/dialog_btn_jump"/>
        <Button
            android:id="@+id/btn_dialog_try"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:background="@mipmap/dialog_btn_try"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

</LinearLayout>
