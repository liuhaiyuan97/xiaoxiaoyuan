<?xml version="1.0" encoding="utf-8"?>
<!-- Demonstrates an alternative content area in SplitActivity. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@mipmap/bg_creat">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <Button
            android:id="@+id/btn_return"
            android:background="@drawable/return_shadow"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/btn_save"
            android:textSize="9dp"
            android:background="@drawable/save_shadow"
            android:textColor="@color/down_color"
            android:layout_marginTop="35dp"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/btn_clear"
            android:textSize="9dp"
            android:background="@drawable/clear_shadow"
            android:textColor="@color/down_color"
            android:layout_marginTop="70dp"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/btn_run"
            android:background="@drawable/run_shadow"
            android:textColor="@color/down_color"
            android:textSize="9dp"
            android:layout_marginTop="105dp"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="35dp" />
        <include layout="@layout/blockly_unified_workspace" />
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_creat1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/auto_tan"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@mipmap/bg_show1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <TextView
                android:textSize="12dp"
                android:textColor="#09999D"
                android:id="@+id/generated_code"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_weight="4"
                android:layout_height="0dp"
                android:text="@string/split_generate_message"
                android:textIsSelectable="true"
                />
            <WebView
                android:id="@+id/wv"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:background="@mipmap/bg_show2"
            android:id="@+id/ll_flash"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/generated_move"
                android:src="@mipmap/wp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

